<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_user_success"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/other_pay_header_pic2">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@mipmap/courier_default_icon"
            android:id="@+id/iv_head_success"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="13936195578"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="92dp"
            android:layout_marginTop="90dp"
            android:id="@+id/tv_name_success"/>

        <TextView
            android:text="设置"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="21dp"
            android:id="@+id/tv_set_success"/>

        <TextView
            android:text="地址：账户管理>"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iv_head_success"/>
    </RelativeLayout>

    <TextView
        android:text="全部订单"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_user_success"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_all_success"/>

    <TextView
        android:text="查看所有订单>"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_all_success"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="17dp"
        android:id="@+id/tv_checkall_sucess"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_order_success"
        android:layout_below="@id/tv_checkall_sucess"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/rl_1"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_act_myebuy_waitfor_pay"
                android:id="@+id/iv_waitpay_success"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_waitpay_success"
                android:text="待支付"
                android:layout_below="@+id/iv_waitpay_success"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/rl_2"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_act_myebuy_waitfor_accept"
                android:id="@+id/iv_accept_success"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_accept_success"
                android:text="待收货"
                android:layout_below="@+id/iv_accept_success"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/rl_3"
            android:layout_weight="1">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_act_myebuy_waitfor_evaluation"
                android:id="@+id/iv_evaluation_success"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_evaluation_success"
                android:text="待评价"
                android:layout_below="@+id/iv_evaluation_success"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/rl_4"
            android:layout_weight="1">
            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/icon_act_myebuy_waitfor_return"
                android:id="@+id/iv_return_success"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_return_success"
                android:text="退换/维修"
                android:layout_below="@+id/iv_return_success"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gv_sucess"
        android:layout_below="@id/ll_order_success"
        android:numColumns="3"></GridView>

</RelativeLayout>
