<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img1_h_tjia_shujuku_shanc"
android:layout_alignParentRight="true"
            android:background="@mipmap/close_order_order_detail_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <RelativeLayout
      android:background="#ffffff"

        android:layout_width="match_parent"
        android:layout_height="0dp"
      android:layout_weight="3"
        >
        <ImageView

            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@mipmap/qq_qq"
            android:id="@+id/img_h_jia_gche"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img_h_jia_gche"
            android:layout_marginStart="21dp"
            android:layout_marginTop="12dp"
            android:id="@+id/tv1_0_h_jia_gche"/>

        <TextView
            android:text="￥ 98.00"
            android:textColor="#ff0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_h_jia_gche"
            android:layout_alignStart="@+id/tv1_0_h_jia_gche"
            android:layout_marginBottom="17dp"
            android:id="@+id/tv1_1_h_jia_gche"/>

        <TextView
            android:text="商品编号:7755888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv1_1_h_jia_gche"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="36dp"
            android:id="@+id/tv1_2_h_jia_gche"/>

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"

        android:background="#d4d4d4"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#ffffff"
        >
<TextView

    android:layout_gravity="center_vertical"
    android:text="购买数量"
    android:textSize="18sp"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginLeft="150dp"
            android:layout_gravity="center_vertical"
            android:layout_width="130dp"
            android:background="@drawable/btn_search_normal_bg"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tv1_h_tjia_shujuku"
               android:background="@drawable/commodity_sub_btn"
                android:layout_width="0dp"
                android:layout_weight="1"

                android:layout_height="fill_parent"/>
            <TextView
                android:id="@+id/tv2_h_tjia_shujuku"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:background="@drawable/commodity_sku_nomal"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv3_h_tjia_shujuku"
                android:layout_width="0dp"
                android:layout_weight="1"
               android:background="@drawable/commodity_add_btn"

                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="9"
    android:background="#f0f0f0"
    ></LinearLayout>
    <Button
        android:text="确定"

        android:textColor="#fff"
        android:background="#ff0000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />
</LinearLayout>
