<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register_act"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bawei.redchild.me.me.View.Login_act">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tb_login"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:padding="5dp"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        style="@style/login_name_tv"
        android:text="账 号"
        android:id="@+id/tv_name_login"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/tb_login"
        android:layout_alignParentStart="true"/>

    <EditText
        style="@style/login_name_et"
        android:hint="手机号/邮箱/用户名/门店会员卡"
        android:layout_alignTop="@+id/tv_name_login"
        android:layout_toEndOf="@+id/tv_name_login"
        android:id="@+id/et_name_login"
        />

    <TextView
        style="@style/login_name_tv"
        android:text="密 码"
        android:id="@+id/textView"
        android:layout_below="@+id/et_name_login"
        android:layout_alignParentStart="true"/>

    <EditText
        style="@style/login_pass_et"
        android:layout_below="@+id/tv_name_login"
        android:layout_toEndOf="@+id/tv_name_login"
        android:id="@+id/et_pass_login"
        android:hint="请输入6-20位易购密码"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/bg_my_order_search_cancle"
        android:id="@+id/iv_name_login"
        android:layout_alignTop="@+id/et_name_login"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/bg_my_order_search_cancle"
        android:id="@+id/iv_pass_login"
        android:layout_alignTop="@+id/st_showpass_login"
        android:layout_toStartOf="@+id/st_showpass_login"
        android:layout_marginTop="5dp"
        android:visibility="invisible"/>

    <com.bawei.redchild.me.me.Utils.SlideSwitch
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/st_showpass_login"
        android:layout_alignTop="@+id/et_pass_login"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"/>


    <Button
        android:text="登 录"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pass_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/but_login_login"
        android:textColor="@color/white"
        android:background="@drawable/shape_loginbut"
        />

    <TextView
        android:text="忘记密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/but_login_login"
        android:layout_toStartOf="@+id/iv_name_login"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_forgetpass_login"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tv_forgetpass_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/but_register_login"
        android:background="@mipmap/btn_register_normal"/>

    <TextView
        android:text="QQ登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_qqlogin_login"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ib_qqlog_login"
        android:layout_marginBottom="10dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/xinlanglog"
        android:layout_marginLeft="30dp"
        android:layout_alignBottom="@+id/ib_qqlog_login"
        android:layout_toEndOf="@+id/but_register_login"
        android:id="@+id/iv_xllogin_login"/>

    <TextView
        android:text="微博登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_xllogin_login"
        android:layout_alignBaseline="@+id/tv_qqlogin_login"
        android:layout_alignBottom="@+id/tv_qqlogin_login"
        android:layout_toStartOf="@+id/tv_forgetpass_login"/>

    <TextView
        android:text="其他登录方式"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ib_qqlog_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:id="@+id/tv_otherlogin_login"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/qqlog"
        android:id="@+id/ib_qqlog_login"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="17dp"
        android:layout_above="@+id/tv_qqlogin_login"
        android:layout_toEndOf="@+id/textView"/>

</RelativeLayout>
